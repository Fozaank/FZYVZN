---
import Banner from "@/components/landing/Banner.astro";
---
<section class="video-section relative" style="height: 100vh; overflow: hidden;">
  <!-- Video Background -->
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <video class="object-cover w-full h-full filter sepia opacity-70" autoplay loop muted>
      <source src="/assets/vinylVid.mp4" type="video/mp4" />
      <!-- Add other video formats like .webm for better browser compatibility -->
    </video>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 mx-auto border-white/20 border-x max-w-7xl">
    <div class="mx-auto">
      <div class="mx-auto lg:pt-28 gradient-grid px-8 py-12">
        <h1 class="text-white font-display uppercase text-3xl lg:text-7xl parallax-text">
          Find your inner artist with FZYVZN.
        </h1>
      </div>
      <Banner />
    </div>
  </div>
</section>
